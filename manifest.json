{
  "manifest_version": 3,
  "name": "Airtable Chrome Extension",
  "description": "Extension to interact with Airtable data",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "https://api.airtable.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
